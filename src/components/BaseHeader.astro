---
import { NavBar } from "../global";
---

<nav>
  {NavBar.map((nav) => <a href={nav.link}>{nav.name}</a>)}
  <button id="btn">dark</button>
</nav>

<style lang="scss">
  nav {
    width: 100%;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1em;
    position: relative;
    a {
      color: var(--text);
    }
    button {
      position: fixed;
      padding: 5px;
      top: 3em;
      right: 1em;
      border: none;
      text-decoration: underline;
      background: var(--bgn);
      color: var(--textn);
      &:hover {
        background: var(--bg);
        color: var(--text);
      }
    }
  }
</style>
